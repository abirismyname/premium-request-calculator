{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "client/build",
  "devCommand": "npm run dev",
  "installCommand": "npm install && cd client && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/models.js": {
      "maxDuration": 10
    },
    "api/plans.js": {
      "maxDuration": 10
    },
    "api/calculate.js": {
      "maxDuration": 10
    }
  }
}
